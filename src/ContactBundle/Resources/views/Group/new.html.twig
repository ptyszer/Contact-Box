{% extends "base.html.twig" %}

{% block title %}Add new group - Contact Box{% endblock %}

{% block container %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add new group:</h5>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
